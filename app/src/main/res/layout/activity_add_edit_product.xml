<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/app_footer"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom du produit" />
        <!-- In activity_add_edit_product.xml -->

        <LinearLayout
            android:id="@+id/layout_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/edit_text_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type/Catégorie" />
            <Button
                android:id="@+id/button_add_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_types_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <EditText
            android:id="@+id/edit_text_cost_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prix coûtant"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edit_text_min_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Niveau de stock minimum"
            android:inputType="number" />

        <EditText
            android:id="@+id/edit_text_supplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fournisseur" />
        <EditText
            android:id="@+id/edit_text_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Prix" />

        <EditText
            android:id="@+id/edit_text_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Quantité" />

        <EditText
            android:id="@+id/edit_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description (optionnel)" />

        <Button
            android:id="@+id/button_generate_codes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Générer codes QR et barre" />

        <ImageView
            android:id="@+id/image_qr"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:contentDescription="QR code" />

        <ImageView
            android:id="@+id/image_barcode"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Code barre" />

        <Button
            android:id="@+id/button_save_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Enregistrer" />

    </LinearLayout>
</ScrollView>

    <!-- Footer -->
    <include
        android:id="@+id/app_footer"
        layout="@layout/app_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>